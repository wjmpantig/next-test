{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "ES2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["dist", ".next", "out", "next.config.js", "node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
